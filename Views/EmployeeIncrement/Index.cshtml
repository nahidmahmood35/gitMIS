            $(document).on("keyup", "tbody .deduction, tbody .earning", calculateGrid);
            $(document).on("keyup", "tbody .isnumber", isnumber);

            $('#txtCodeNo').autocomplete({
                source: function (request, response) {
                    $.ajax({
                        type: "GET",
                        url: "@UrlConfig.Action("GetEmployeeList", "EmployeeGLOApi")",
                        dataType: "Json",
                        data: { 'searchString': $("#txtCodeNo").val() },
                        success: function (data) {
                            response(data.slice(0, 10));
                        }
                    });
                },
                select: function (event, ui) {
                    getEmployeeDetailById(ui.item.emId);
                    $('.employeeSearch').addClass('none');
                    $('.content').removeClass('none');
                    return false;
                },
                minLength: 3
            }).data("ui-autocomplete")._renderItem = function (ul, item) {
                if (ul.children().length === 0) {
                    $("<thead><tr><th>কোড</th><th>নাম</th><th>মোবাইল</th><th>পদবী</th></tr></thead>").appendTo(ul);
                }
                var html = "<td>" + item.emCode + "</td>";
                html += "<td>" + item.emName + "</td>";
                html += "<td>" + item.emMobileNo + "</td>";
                html += "<td>" + item.emDesignationName + "</td>";
                return $("<tr></tr>").append(html).appendTo(ul);
            };
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) { $('#image1').attr('src', e.target.result); }
                reader.readAsDataURL(input.files[0]);
            }
        }


        $(".image1").change(function () {
            var imgSize = parseFloat(this.files[0].size);
            if (imgSize > 1000000) {
                alert("Upload image size not more 1MB!!!");
            } else {
                readURL(this);
            }
        });

        function isnumber() {
            $('.isnumber').keypress(function (e) {
                var character = String.fromCharCode(e.keyCode);
                var newValue = this.value + character;
                if (isNaN(newValue) || parseFloat(newValue) * 100 % 1 > 0) {
                    e.preventDefault();
                    return false;
                }
            });
        }

        function getEmployeeDetailById(param) {
            $.ajax({
                type: "GET",
                url: "@UrlConfig.Action("GetEmployeeDetalsList", "EmployeeGloApi")",
                dataType: "Json",
                data: { 'searchString': param },
                success: function (data) {
                    $('#txtEmployeeId').text(data[0].emId);
                    $('#CodeNo').text(data[0].emCode);
                    $("#Grade").text(data[0].grade);
                    $('#EmployeeName').text(data[0].emName);
                    $('#MobileNo').text(data[0].emMobileNo);
                    $('#Project').text(data[0].unitName);
                    $('#Deparment').text(data[0].departmentName);
                    $('#Designation').text(data[0].emDesignationName);
                    $("#NID").text(data[0].nid);
                    $("#TAXNumber").text(data[0].taxNumber);
                    $("#Tahabil").text(data[0].tahabil);
                    $('#DateOfBirth').text(ToJsonDate(data[0].emDob));
                    $('#Gender').text(data[0].genderName);
                    $('#Nationality').text(data[0].nationalName);
                    $('#Religion').text(data[0].religionName);
                    $('#DateOfJoining').text(ToJsonDate(data[0].emDoj));
                    $('#DateOfConfirmation').text(ToJsonDate(data[0].emDoConfirmation));
                    $('#PresentAddress').text(data[0].emPresentAddress);
                    $('#PermanentAddress').text(data[0].emPermanentAddress);
                    $('#EmployeeBankAccountNo').text(data[0].emSalaryBankAccountNo);
                    $('#EmployeeBankName').text(data[0].bankName);
                    $('#JibonBimaNumber').text(data[0].jibonBimaNumber);
                    $('#txtPaymentAmountBankPc').text(data[0].emPaymentAmountBankPc);
                    $('#txtPaymentAmountCashPc').text(data[0].emPaymentAmountCashPc);

                    $('#EmployeeBankBranch').text(data[0].emBankBanchName);
                    $('#image1').attr("src", data[0].emEmpImage);
                    //$("#txtJibonBimaNumber").val(data[0].jibonBimaNumber);
                    //$('#txtBasicEarning').val(data[0].emBasicEarning);
                    //$('#txtBasicDeduction').val(data[0].emBasicDeduction);
                    //$('#txtGrossSalary').val(data[0].emGrossSalary);

                    for (var i = 0; i < data.length; i++) {
                        var table = $('#Earningbody, #Deductionbody');
                        subtotal = 0;
                        table.find('tr').each(function () {
                            var $tds = $(this).find('td');
                            if ($tds.eq(0).text() == data[i].itemid) {
                                $tds.eq(4).text(data[i].itemCharge);
                                $tds.eq(1).text(data[i].salaryCustomId);
                                total = parseFloat(data[i].itemCharge);
                            }
                            subtotal += total;
                        });
                        //$("#txtBasicEarning").val(subtotal);
                    }
                    var table = $('#Earningbody');
                    Earningtotal = 0;
                    table.find('tr').each(function () {
                        var $tds = $(this).find('td');
                        Earning = parseFloat($tds.eq(4).text());
                        Earningtotal += Earning;
                    });
                    $("#prevEarningTotal").text(Earningtotal);

                    var table = $('#Deductionbody');
                    Deductiontotal = 0;
                    table.find('tr').each(function () {
                        var $tds = $(this).find('td');
                        Deduction = parseFloat($tds.eq(4).text());
                        Deductiontotal += Deduction;
                    });
                    $("#prevDeductionTotal").text(Deductiontotal);
                    $("#txtGrossSalary").val($("#txtBasicEarning").val() - $("#txtBasicDeduction").val());
                },
                error: function (errormessage) { alert(errormessage.responseText); }
            });
        }

