    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
    <script>
        $(function () {
            $(".year-picker").datepicker({
                format: "yyyy",
                viewMode: "years",
                minViewMode: "years"
            });
            $(".month-picker").datepicker({
                format: "MM",
                minViewMode: 1,
                maxViewMode: 1
